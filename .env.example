# Application (VITE_ prefix needed for browser access)
VITE_APP_NAME="HeapMind SSO"
VITE_COMPANY_NAME="HeapMind"
VITE_APP_URL=http://localhost:5173
VITE_APP_PORT=5173

VITE_API_URL=http://localhost:5000
API_TIMEOUT=30000

VITE_COOKIE_DOMAIN=localhost
VITE_COOKIE_SECURE=false
VITE_COOKIE_SAME_SITE=lax
COOKIE_MAX_AGE=86400000

APP_ENV=development
NODE_ENV=development

# Session (VITE_ prefix for client-side access)
VITE_SESSION_SECRET=your-session-secret
SESSION_TIMEOUT=3600000
SESSION_COOKIE_NAME=sso_session

# Security
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true
CSP_ENABLED=true
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# JWT (if using JWT tokens)
JWT_SECRET=your-jwt-secret
JWT_EXPIRES_IN=3600
JWT_REFRESH_SECRET=your-jwt-refresh-secret
JWT_REFRESH_EXPIRES_IN=86400

# Monitoring & Analytics
MONITORING_ENABLED=false
ANALYTICS_ENABLED=false
SENTRY_DSN=your-sentry-dsn